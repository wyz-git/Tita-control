<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 模式切换按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal">

        <ToggleButton
            android:id="@+id/mode_toggle"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:textOn="蓝牙模式"
            android:textOff="MQTT模式"
            android:textSize="14sp"
            android:background="@drawable/custom_toggle_bg"
            android:padding="4dp"/>
    </LinearLayout>

    <!-- 第一行：5个开关 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- Switch 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/item_bg"
            android:padding="8dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stop obstacles"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp"/>

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:thumbTint="@android:color/white"
                android:track="@drawable/switch_track"/>
        </LinearLayout>

        <!-- Switch 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/item_bg"
            android:padding="8dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SDK Mode"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp"/>

            <Switch
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:thumbTint="@android:color/white"
                android:track="@drawable/switch_track"/>
        </LinearLayout>

        <!-- Switch 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/item_bg"
            android:padding="8dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Image trans"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp"/>

            <Switch
                android:id="@+id/switch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:thumbTint="@android:color/white"
                android:track="@drawable/switch_track"/>
        </LinearLayout>

        <!-- Switch 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/item_bg"
            android:padding="8dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Code follow"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp"/>

            <Switch
                android:id="@+id/switch4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:thumbTint="@android:color/white"
                android:track="@drawable/switch_track"/>
        </LinearLayout>

        <!-- Switch 5 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/item_bg"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gesture follow"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp"/>

            <Switch
                android:id="@+id/switch5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:thumbTint="@android:color/white"
                android:track="@drawable/switch_track"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 第二行：5个开关 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- Switch 6 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/item_bg"
            android:padding="8dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Human follow"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp"/>

            <Switch
                android:id="@+id/switch6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:thumbTint="@android:color/white"
                android:track="@drawable/switch_track"/>
        </LinearLayout>

        <!-- Switch 7 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/item_bg"
            android:padding="8dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remote Voice"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp"/>

            <Switch
                android:id="@+id/switch7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:thumbTint="@android:color/white"
                android:track="@drawable/switch_track"/>
        </LinearLayout>

        <!-- Switch 8 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/item_bg"
            android:padding="8dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="USB control"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp"/>

            <Switch
                android:id="@+id/switch8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:thumbTint="@android:color/white"
                android:track="@drawable/switch_track"/>
        </LinearLayout>

        <!-- Switch 9 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/item_bg"
            android:padding="8dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Warehouse"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp"/>

            <Switch
                android:id="@+id/switch9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:thumbTint="@android:color/white"
                android:track="@drawable/switch_track"/>
        </LinearLayout>

        <!-- Switch 10 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/item_bg"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Navig mode"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp"/>

            <Switch
                android:id="@+id/switch10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:thumbTint="@android:color/white"
                android:track="@drawable/switch_track"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>