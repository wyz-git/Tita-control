<!-- res/drawable/btn_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF"/> <!-- 半透明白色 -->
            <corners android:radius="18dp"/>
            <stroke 
                android:width="1dp" 
                android:color="#80FFFFFF"/> <!-- 半透明白边框 -->
        </shape>
    </item>
    
    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- 完全透明 -->
            <corners android:radius="18dp"/>
            <stroke 
                android:width="1dp" 
                android:color="#80FFFFFF"/> <!-- 半透明白边框 -->
        </shape>
    </item>
</selector>